<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localization="clr-namespace:ProFitNess.UI.Localization;assembly=ProFitNess.UI"
             x:Class="ProFitNess.UI.Views.RegistrationPage">
    <ContentPage.Content>
        <FlexLayout Direction="Column" Wrap="Wrap" JustifyContent="SpaceAround">
            <Label Text="{localization:Translate Registration}"/>
            <Label x:Name="RegistrationErrorLabel" Text="Fill all inputs!" TextColor="Red" IsVisible="False"/>
            <Label Text="{localization:Translate Name}"/>
            <Entry x:Name="UserName" />
            <Label Text="{localization:Translate Sex}"/>
            <Entry x:Name="UserSex"/>
            <Label Text="{localization:Translate Age}"/>
            <Entry x:Name="UserAge"/>
            <Label Text="{localization:Translate Mail}"/>
            <Entry x:Name="UserMail"/>
            <Label Text="{localization:Translate Password}"/>
            <Entry x:Name="UserPassword" IsPassword ="True"/>
            <Button Text="{localization:Translate Registration}" Clicked="RegistrationButton_Clicked"/>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>