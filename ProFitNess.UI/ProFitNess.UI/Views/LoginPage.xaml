<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localization="clr-namespace:ProFitNess.UI.Localization;assembly=ProFitNess.UI"
             x:Class="ProFitNess.UI.Views.LoginPage">
    <ContentPage.Content>
        <FlexLayout Direction="Column" Wrap="Wrap" JustifyContent="SpaceAround">
            <Label Text="{localization:Translate Welcome}"/>
            <Label Text="{localization:Translate Signin}"/>
            <Label x:Name="LoginErrorLabel" Text="User not found!" TextColor="Red" IsVisible="False"/>
            <Entry x:Name="UserMail" Placeholder="{localization:Translate Mail}"/>
            <Entry x:Name="UserPassword" Placeholder="{localization:Translate Password}"/>
            <Button Text="{localization:Translate Login}" Clicked="LoginButton_Clicked"/>
            <Button Text="{localization:Translate Registration}" Clicked="RegisterButton_Clicked"/>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>