<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProFitNess.UI.Views.ExercisePage">
    <ContentPage.Content>
        <FlexLayout Direction="Column" Wrap="Wrap" JustifyContent="Center">
            <Label x:Name="ExerciseName"/>
            <Image x:Name="ExerciseImage" IsAnimationPlaying="True"/>
            <Label x:Name="ExerciseCalories"/>
            <Label x:Name="ExerciseDescription"/>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>